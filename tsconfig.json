{
  "compilerOptions": {
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "lib": ["esnext", "DOM"],
  },
  "exclude": [
    "**/demo/**",
    "**/**/**/dist/**",
    "scripts",
    "**/scripts/**"
  ]
}
